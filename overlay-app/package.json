{
  "name": "balatro-overlay",
  "version": "0.1.0",
  "description": "Real-time overlay tracker for Balatro with strategy intelligence",
  "main": "dist-electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "dev": "concurrently \"npm run start\" \"npm run dev:electron\"",
    "dev:angular": "ng serve",
    "dev:electron": "wait-on http://localhost:4200 && npm run build:electron && electron .",
    "build:all": "npm run build && npm run build:electron",
    "package": "npm run build:all && electron-builder",
    "package:win": "npm run build:all && electron-builder --win",
    "package:mac": "npm run build:all && electron-builder --mac",
    "package:linux": "npm run build:all && electron-builder --linux"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "autoprefixer": "^10.4.23",
    "dexie": "^4.2.1",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^3.4.19",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular/cli": "^17.3.17",
    "@angular/compiler-cli": "^17.3.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.2.1",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.2",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.balatro.overlay",
    "productName": "Balatro Overlay",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.png"
    }
  }
}
